{
    "git.autofetch": true,
    "files.autoSave": "afterDelay",
    "editor.fontFamily": "'DroidSansM Nerd Font', 'monospace', monospace",
    "editor.wordWrap": "on",
    "editor.acceptSuggestionOnEnter": "smart",
    "files.readonlyFromPermissions": true,
    "workbench.commandPalette.experimental.suggestCommands": true,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "flake.nix": "flake.lock",
        "pyproject.toml": "poetry.lock, uv.lock",
        "requirements.txt": "requirements*.txt",
        "gleam.toml": "manifest.toml"
    },
    "explorer.incrementalNaming": "smart",
    "search.showLineNumbers": true,
    "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.confirmOnKill": "always",
    "terminal.integrated.cursorStyleInactive": "underline",
    "terminal.integrated.enableImages": true,
    "terminal.integrated.mouseWheelZoom": true,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.profiles.linux": {
        "nushell": {
            "path": "nu"
        },
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.tabs.title": "${process}${separator}${local}${separator}${task}",
    "task.slowProviderWarning": true,
    "problems.showCurrentInStatus": true,
    "remote.tunnels.access.preventSleep": true,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}